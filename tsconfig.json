{
	"compilerOptions": {
		"rootDir": "./",
		"paths": {
			"@src/*": ["./src/*"],
			"@tests/*": ["./tests/*"]
		},

		"target": "es2016",
		"lib": ["es6"],
		"module": "commonjs",
		"resolveJsonModule": true,
		"allowJs": true,
		"outDir": "build",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	}
}
